@using Todo.Domain.Models;
@model IEnumerable<TodoItem>

@foreach (var item in Model)
{
    <div class="modal fade" id="delete-item-@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete list</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete item "@item.Title" (from "@item.TodoList.Title" list)?
                    This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <a id="delete-list-button" type="button" asp-action="Delete"
                   asp-controller="TodoItem" asp-route-id="@item.Id" asp-antiforgery="true"
                       class="btn btn-danger">
                        Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
}